<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PhoneSignUpActivity">

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            app:srcCompat="@drawable/ic_plane" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/spartan_bold"
            android:text="Verify OTP!"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:fontFamily="@font/spartan_regular"
            android:gravity="center_horizontal"
            android:text="Enter the 6-digit code below."
            android:textSize="@dimen/_13sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/otpNo1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/otpNo2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />
            <EditText
                android:id="@+id/otpNo3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />
            <EditText
                android:id="@+id/otpNo4"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />
            <EditText
                android:id="@+id/otpNo5"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />
            <EditText
                android:id="@+id/otpNo6"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/inputbox"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/verifyOtpBtn"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/button"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="Verify OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpContainer"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_thin"
            android:text="Didn't receive OTP?"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/resendOtpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_bold"
            android:text=" Resend OTP"
            android:textColor="@color/primary_purple"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

</RelativeLayout>